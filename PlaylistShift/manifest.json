{
	"name": "Playlist Shift",
	"version": "1.0.0",
	"description": "Remove old unwatched Youtube Videos from your 'Watch later' or any other playlist",
	"manifest_version": 2,
	
	"icons": {"128": "images/icon128.png"}, 
	"browser_action": 
	{
	  "default_icon": 
	  {                    
		"16": "images/icon16.png",           
		"24": "images/icon24.png",           
		"32": "images/icon32.png"            
	  },   
	  "default_popup": "ver_a.0.0/wwwroot/index.html"        
	},
	
	"permissions": 
	[
	  "cookies",
	  "sessions",
	  "https://www.youtube.com/"
	]
}