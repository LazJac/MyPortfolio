{
	"name": "Playlist Shift",
	"version": "1.0.0",
	"description": "Remove old unwatched Youtube Videos from your 'Watch later' or any other playlist.",
	"manifest_version": 2,
	
	"icons": {"128": "images/icon128.png"}, 
	"browser_action": 
	{
	  "default_icon": 
	  {                    
		"16": "images/icon16.png",           
		"24": "images/icon24.png",           
		"32": "images/icon32.png"            
	  },   
	  "default_popup": "wwwroot/index.html"        
	},
	
	"content_security_policy": 
	"script-src 'self' 'unsafe-eval' 'sha256-v8v3RKRPmN4odZ1CWM5gw80QKPCCWMcpNeOmimNL2AA='; object-src 'self'",
	
	"permissions": 
	[
	  "cookies",
	  "sessions",
	  "https://www.youtube.com/"
	]
}